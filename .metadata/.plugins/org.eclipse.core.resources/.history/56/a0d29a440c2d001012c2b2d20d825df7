/* Private variables ---------------------------------------------------------*/
ADC_HandleTypeDef hadc1;

DAC_HandleTypeDef hdac1;

TIM_HandleTypeDef htim1;
TIM_HandleTypeDef htim2;

/* USER CODE BEGIN PV */
typedef unsigned char byte;
typedef unsigned short ust;

const float pi = 3.1416;
const ust amplitude = 4000;

byte inc = 0;
byte times = 1;
byte sq = 60;
uint32_t all = 0;
ust dac_value;
ust adc_array[1000];
byte n = 0;
byte method = 0;
ust adc_value;
ust i = 0;
byte calculate_flag = 0;

/* USER CODE END PV */

